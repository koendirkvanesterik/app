    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.0.3",
    "@types/mdx-js__react": "^1.5.5",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/react-helmet": "^6.1.4",
    "@types/tailwindcss": "^2.2.4",
    "@types/three": "^0.134.0",
    "autoprefixer": "^10.2.5",
    "babel-preset-react-app": "^10.0.0",
    "check-dependencies": "^1.1.0",
    "commitlint": "^15.0.0",
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^19.0.2",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prefer-arrow": "^1.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-testing-library": "^5.0.1",
    "husky": "^7.0.4",
    "jest": "^27.4.3",
    "lint-staged": "^12.1.2",
    "postcss": "^8.4.4",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.2",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "ts-jest": "^27.1.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.2"
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write"
    ],
    "**/*.json": [
      "prettier --write"
    ],
    "**/*.md{,x}": [
      "prettier --write"
    ],
    "**/*.ts{,x}": [
      "eslint --cache --fix",
      "stylelint --config .stylelintrc.json",
      "prettier --write"
    ],
    "**/*.y{,a}ml": [
      "prettier --write"
    ]
  },
  "scripts": {
    "build": "gatsby clean && gatsby build",
    "clean": "gatsby clean",
    "develop": "gatsby develop",
    "format": "prettier --check '**/*.{ts,tsx,json,md,js,yml}'",
    "format:fix": "prettier --write '**/*.{ts,tsx,json,md,js,yml}'",
    "lint": "concurrently \"npm run lint:typescript\" \"npm run lint:styles\"",
    "lint:styles": "stylelint --config '.stylelintrc.json' src/**/*.css",
    "lint:typescript": "eslint --cache --ext .ts,.tsx src",
    "release": "standard-version --releaseCommitMessageFormat \"chore(release): {{currentTag}}\"",
    "serve": "gatsby clean && gatsby build && gatsby serve",
    "start": "gatsby develop",
    "test": "jest",
    "test:coverage": "jest --coverage --collectCoverageFrom=src/**/*.{ts,tsx} --collectCoverageFrom=!src/**/{*.d.ts,index.ts,*.stories.tsx,styles.ts,types.ts}",
    "test:types": "tsc -p . --noEmit"
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "prettier --write CHANGELOG.md"
    }
  }
}
